{
  "$schema": "https://raw.githubusercontent.com/dotnet/docfx/main/schemas/docfx.schema.json",
  "metadata": [
    {
      "src": [
        {
          "src": "..",
          "files": [
            "src/**/*.csproj"
          ]
        }
      ],
      "dest": "api",
      "filter": "filterConfig.yml"
    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "**/*.{md,yml}"
        ],
        "exclude": [
          "_site/**"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "images/**"
        ]
      }
    ],
    "output": "_site",
    "template": [
      "default",
      "modern",
      "templates/permify"
    ],
    "globalMetadata": {
      "_appName": "Permify-Client",
      "_appLogoPath": "images/logo.svg",
      "_enableSearch": true,
      "_enableNewTab": true,
      "_disableContribution": false,
      "_disableTocFilter": false,
      "_disableBreadcrumb": false,
      "pdf": true
    }
  }
}