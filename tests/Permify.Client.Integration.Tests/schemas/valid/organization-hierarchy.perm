entity user {
    attribute is_real boolean
}

entity organization {
    relation admin @user
    relation member @user
    relation owner @user

    action manage = admin
    action view = admin or member

    attribute is_public boolean
}

entity document {
    relation parent @organization
    relation owner @user

    action view = owner or parent.admin
    action delete = owner or parent.admin

    permission edit = parent.admin or owner

    attribute is_private boolean
    attribute word_count integer
    attribute fault_tolerance double
    attribute tags string[]
}
